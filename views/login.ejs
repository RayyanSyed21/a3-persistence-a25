<% layout('layout') %>
<section class="col-md-6 mx-auto">
  <h2 class="mb-3">Login / Signup</h2>
  <p class="text-muted">For A3: if a username does not exist, an account will be created automatically after you submit.</p>
  <form method="post" action="/login" class="needs-validation" novalidate>
    <label class="form-label" for="username">Username</label>
    <input id="username" class="form-control mb-2" type="text" name="username" placeholder="jdoe" required aria-required="true">
    <label class="form-label" for="password">Password</label>
    <input id="password" class="form-control mb-3" type="password" name="password" placeholder="••••••••" required aria-required="true">
    <button class="btn btn-primary">Continue</button>
  </form>
</section> 


